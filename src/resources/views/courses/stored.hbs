<form class="mt-4" method="POST" action="/courses/checkSubmit"> 
        <h3>Khóa học của tôi</h3>
        <table class="table">
        <div class="mt-4 mb-4 d-flex align-items-center">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="check-all">
            <label class="form-check-label" for="check-all">
              Check tất cả
            </label>
          </div>
          <select class="form-control form-control-sm check-from-delete" name="action" required>
            <option value="">--Hành động--</option>
            <option value="delete">Xóa</option>
            <option value="edit">Sửa</option>
          </select>

          <button type="submit" class="btn btn-primary" id="buttonTotal" disabled>Thực hiện</button>
        </div>
      <thead>
        <tr>
          <th></th>
          <th scope="col">STT</th>
          <th scope="col">Tên bài học
            {{{sortable 'name' _sort}}}
          </th>
          <th scope="col">Mô tả</th>
          <th scope="col">Thời gian tạo</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
          <th><input class="form-check-inputhaha" type="checkbox" name="courseIds[]" value="{{this._id}}"></th>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="/courses/{{this._id}}/edit" class="btn btn-link">Sửa</a>
            <a href="" class="btn btn-link" data-toggle="modal" data-target="#delete-course" data-id="{{this._id}}">Xóa</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
</form>

<form name="delete-form" method="POST">

</form>

{{!--NÚT XÓA--}}
<div class="modal" tabindex="-1" role="dialog" id="delete-course">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa khóa học này?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-Delete" type="button" class="btn btn-danger">Đồng ý</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>





<script>
    document.addEventListener('DOMContentLoaded', function() {

        var courseId
        var deleteForm = document.forms['delete-form']
        var deleteButton = document.getElementById('btn-Delete')
        
        // Lấy id từ click nút Xóa
        $('#delete-course').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) 
            courseId = button.data('id')
            console.log(courseId)
        })
        
        
        deleteButton.onclick = function() {
            deleteForm.action =`/courses/${courseId}/delete?_method=DELETE`
            deleteForm.submit()
      }


    })
      
</script>

<script>

  document.addEventListener('DOMContentLoaded', function() {

    var checkAllButton = $('#check-all')
    var checkCourse = $('input[name="courseIds[]"]')
    var buttonSubmit = $('#buttonTotal')
    
    //  Nút Check tất cả
    checkAllButton.change(function() {
      const isCheckedAll = $(this).prop('checked')
      const isCheckCourse = checkCourse.prop('checked', isCheckedAll)
      renderbuttonSubmit()
      
    })
    // Check tất cả nút
    checkCourse.change(function() {
      isCheckedCourseAll = checkCourse.length === $('input[name="courseIds[]"]:checked').length
      checkAllButton.prop('checked', isCheckedCourseAll)

      renderbuttonSubmit()
    })

    
    // hiện submit
    function renderbuttonSubmit() {
      const checkedCount = $('input[name="courseIds[]"]:checked').length;
      if(checkedCount > 0) {
        buttonSubmit.attr('disabled',false)
    }else {
      buttonSubmit.attr('disabled',true)
    }
    }
  })
  

</script>





