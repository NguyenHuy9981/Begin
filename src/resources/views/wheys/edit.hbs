<div class="mt-4">
  <h3>Sửa thông tin</h3>
    <form method="POST" action="/wheys/{{whey._id}}/update?_method=PUT">
    <div class="form-group">
        <label for="name">Tên</label>
        <input type="text" name="name" class="form-control" value="{{whey.name}}" id="name">
    </div>
    <div class="form-group">
        <label for="image">Link hình</label>
        <textarea name="image" class="form-control" id="image">{{whey.image}}</textarea>
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" name="slug" class="form-control" value="{{whey.slug}}" id="slug">
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>