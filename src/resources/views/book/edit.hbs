<div class="mt-4">
    <h3>Sửa dữ liệu</h3>
    <form method="POST" action="/books/{{book._id}}/update?_method=PUT">
    <div class="form-group">
        <label for="name">Tên sách</label>
        <input name="name" type="text" class="form-control" id="name" value="{{book.name}}">
    </div>
    <div class="form-group">
        <label for="image">Link hình</label>
        <input name="image" type="text" class="form-control" id="image" value="{{book.image}}">
    </div>
    <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</div>